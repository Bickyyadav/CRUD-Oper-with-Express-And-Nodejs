<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Users</title>
   
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="/stylesheets/style.css">
</head>
<body>  
    <div class="w-full h-full bg-zinc-900 p-10 text-white">
        <a class="text-blue-500" href="/">Back to home</a>
        <h1 class="text-3xl tracking-tighter mb-3">All Users</h1>
        
        <!-- User list container -->
        <div class="users flex gap-3 flex-wrap">
            <!-- Loop through users and display each one -->
            <% users.forEach(function (user) { %>
                <div class="user w-72 p-5 bg-zinc-900 rounded-lg">
                    <!-- Placeholder for user image or actual image -->
                    <div class="w-full h-72 bg-red-500 rounded-lg">
                        <!-- If user image is available, show it -->
                        <% if (user.image) { %>
                            <img class="w-full h-full object-cover rounded-lg" src="<%= user.image %>" alt="User profile picture">
                        <% } else { %>
                            <div class="w-full h-full flex items-center justify-center text-gray-500">No Image</div>
                        <% } %>
                    </div>
                    <!-- User's name -->
                    <h3 class="text-2xl tracking-tighter mt-3"><%= user.name %></h3>
                    <!-- User's email -->
                    <h5 class="text-zinc-500"><%= user.email %></h5>
                    <!-- Edit and Delete links -->
                    <div class="flex gap-3">
                        <a class="text-zinc-700" href="">Edit User</a>
                        <a class="text-red-500" href="/delete.<% user._id%>">Delete User</a>
                    </div>
                </div>  
            <% }) %>
        </div>
    </div>     
</body>
</html>
